<article class="{{post_class}} hentry">
    <div class="post-media">                               
        <!--Post Thumb Content-->
        <div class="post-thumb-content">             
            <div class="entry-meta">
                <span class="entry-date">
                    <i class="fa fa-clock-o"></i>{{date format="DD MMMM YYYY"}}
                </span>
                <span class="entry-share">{{author}}</span>
                <span class="entry-comment">
                    <a class="comments-link" href="{{url}}#disqus_thread">0 Comments</a>
                </span>
            </div><!--/.meta--> 
            
            <figure class="post-thumb"> 
                <a href="{{url}}"> 
                    {{#if image}}
                        <img src="{{image}}" alt="{{title}}">
                    {{else}}
                        <img src="/assets/images/no-thumb/layout-two.jpg" alt="{{title}}">
                    {{/if}}
                </a>
            </figure><!--/.post thumb-->
            {{#if tags}}
            <div class="rotate">
                <span class="cat-links">
                    {{tags limit="1"}}
                </span>                                            
            </div><!--/.rotate-->
            {{/if}}
        </div><!--/.post thumb content-->
        
        <!--Post Details-->
        <div class="post-details">
            <h2 class="entry-title">
                <a href="{{url}}">{{title}}</a>
            </h2><!--/.entry title-->   
            <div class="entry-content">                                        
                {{content words="50"}}
                <div class="post-readmore">
                    <p>
                        <a class="more-link" href="{{url}}">Continue Reading 
                            <i class="fa fa-long-arrow-right"></i>
                        </a>
                    </p>
                </div>
            </div><!--/.entry content-->
        </div><!--/.post details-->
    </div><!--/.post media-->
</article><!--/.post--> 
